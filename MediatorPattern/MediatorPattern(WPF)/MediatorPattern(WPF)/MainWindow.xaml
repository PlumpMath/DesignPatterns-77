<Window x:Class="MediatorPattern_WPF_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="320">
	<Grid>
		<TextBox x:Name="txtName" HorizontalAlignment="Left" Height="25" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Margin="10,10,0,0" TextChanged="txtName_TextChanged"/>
		<Button x:Name="btnAdd" Content="ADD" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="220,10,0,0" Height="25" Click="btnAdd_Click"/>
		<Button x:Name="btnClear" Content="CLEAR" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="220,45,0,0" Height="25" Click="btnClear_Click"/>
		<ListBox x:Name="lstName" HorizontalAlignment="Left" Height="200" VerticalAlignment="Top" Width="200" Margin="10,45,0,0"/>

	</Grid>
</Window>
